            <div class="add-new-cat-head">
            Coupon Information Adding
            </div>
            <div class="add-new-cat-content">
                <div class="add-new-cat-content1">
                    <div class="add-new-cat-content-head">
                        Coupon Type
                    </div>
                    <div class="add-new-cat-content-input">
                        <select name="" id="">
                            <option value="1">for Product</option>
                            <option value="2">for Total Order</option>
                        </select>
                    </div>
                </div>
                <div class="add-new-cat-content1">
                    <div class="add-new-cat-content-head">
                        Coupon code
                    </div>
                    <div class="add-new-cat-content-input">
                        <input type="text">
                    </div>
                </div>
                 <div class="add-new-cat-content1">
                    <div class="add-new-cat-content-head">
                        Minimum Shopping
                    </div>
                    <div class="add-new-cat-content-input">
                        <input type="text">
                    </div>
                </div>
                <div class="add-new-cat-content1">
                    <div class="add-new-cat-content-head">
                        Discount
                    </div>
                    <div class="add-new-cat-content-input">
                        <input type="text">
